<!-- TODO move this to a regular changelog before PR -->
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="approvals" author="vmuzikar@redhat.com">

        <createTable tableName="APPROVAL_REQUESTS">
            <column name="ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="REALM_ID" type="VARCHAR(36)"/>
            <column name="DESCRIPTION" type="VARCHAR(1024)"/>
            <column name="HANDLER_ID" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="ACTION_ID" type="VARCHAR(255)"/>
            <column name="TIME" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="USER_ID" type="VARCHAR(36)"/>
            <column name="USER_REALM_ID" type="VARCHAR(36)"/>
        </createTable>

        <addPrimaryKey tableName="APPROVAL_REQUESTS" columnNames="ID" constraintName="APPR_REQ_PK"/>
        <addForeignKeyConstraint baseTableName="APPROVAL_REQUESTS" baseColumnNames="REALM_ID"
                                 constraintName="APPR_REQ_REALM_FK"
                                 referencedTableName="REALM"
                                 referencedColumnNames="ID"/>
        <addForeignKeyConstraint baseTableName="APPROVAL_REQUESTS" baseColumnNames="USER_ID"
                                 constraintName="APPR_REQ_USER_FK"
                                 referencedTableName="USER_ENTITY"
                                 referencedColumnNames="ID"/>
        <addForeignKeyConstraint baseTableName="APPROVAL_REQUESTS" baseColumnNames="USER_REALM_ID"
                                 constraintName="APPR_REQ_USER_REALM_FK"
                                 referencedTableName="REALM"
                                 referencedColumnNames="ID"/>

        <createTable tableName="APPROVAL_REQUEST_ATTRIBUTES">
            <column name="REQUEST_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="VALUE" type="VARCHAR(4096)"/>
        </createTable>

        <addPrimaryKey tableName="APPROVAL_REQUEST_ATTRIBUTES" columnNames="REQUEST_ID, NAME" constraintName="APPR_REQ_ATTR_PK"/>
        <addForeignKeyConstraint baseTableName="APPROVAL_REQUEST_ATTRIBUTES" baseColumnNames="REQUEST_ID"
                                 constraintName="APPR_REQ_ATTR_FK"
                                 referencedTableName="APPROVAL_REQUESTS"
                                 referencedColumnNames="ID"/>


        <createTable tableName="APPROVAL_LISTENER_CONFIGS">
            <column name="PROVIDER_ID" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="REALM_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="ENABLED" type="BOOLEAN" defaultValueBoolean="false"/>
        </createTable>

        <addPrimaryKey tableName="APPROVAL_LISTENER_CONFIGS" columnNames="PROVIDER_ID, REALM_ID" constraintName="APPR_LIS_PK"/>
        <addForeignKeyConstraint baseTableName="APPROVAL_LISTENER_CONFIGS" baseColumnNames="REALM_ID"
                                 constraintName="APPR_LIS_REALM_FK"
                                 referencedTableName="REALM"
                                 referencedColumnNames="ID"/>

        <createTable tableName="APPROVAL_LISTENER_CONFIGS_VALUES">
            <column name="PROVIDER_ID" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="REALM_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="VALUE" type="VARCHAR(4096)"/>
        </createTable>

        <addPrimaryKey tableName="APPROVAL_LISTENER_CONFIGS_VALUES" columnNames="PROVIDER_ID, REALM_ID, NAME" constraintName="APPR_LIS_VAL_PK"/>
        <addForeignKeyConstraint baseTableName="APPROVAL_LISTENER_CONFIGS_VALUES" baseColumnNames="PROVIDER_ID, REALM_ID"
                                 constraintName="APPR_LIS_VAL_FK"
                                 referencedTableName="APPROVAL_LISTENER_CONFIGS"
                                 referencedColumnNames="PROVIDER_ID, REALM_ID"/>


        <createTable tableName="APPROVAL_EVALUATOR_ACTION">
            <column name="HANDLER_ID" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="ACTION_ID" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="REALM_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="ENABLED" type="BOOLEAN" defaultValueBoolean="false"/>
        </createTable>

        <addPrimaryKey tableName="APPROVAL_EVALUATOR_ACTION" columnNames="HANDLER_ID, ACTION_ID, REALM_ID" constraintName="APPR_EVAL_ACT_PK"/>
        <addForeignKeyConstraint baseTableName="APPROVAL_EVALUATOR_ACTION" baseColumnNames="REALM_ID"
                                 constraintName="APPR_EVAL_ACT_REALM_FK"
                                 referencedTableName="REALM"
                                 referencedColumnNames="ID"/>


        <createTable tableName="APPROVAL_EVALUATOR_ACTION_ROLES">
            <column name="HANDLER_ID" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="ACTION_ID" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="REALM_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="ROLE_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="APPROVAL_EVALUATOR_ACTION_ROLES" columnNames="HANDLER_ID, ACTION_ID, REALM_ID, ROLE_ID" constraintName="APPR_EVAL_ACT_ROLES_PK"/>
        <addForeignKeyConstraint baseTableName="APPROVAL_EVALUATOR_ACTION_ROLES" baseColumnNames="HANDLER_ID, ACTION_ID, REALM_ID"
                                 constraintName="APPR_EVAL_ACT_ROLES_FK1"
                                 referencedTableName="APPROVAL_EVALUATOR_ACTION"
                                 referencedColumnNames="HANDLER_ID, ACTION_ID, REALM_ID"/>
        <addForeignKeyConstraint baseTableName="APPROVAL_EVALUATOR_ACTION_ROLES" baseColumnNames="ROLE_ID"
                                 constraintName="APPR_EVAL_ACT_ROLES_FK2"
                                 referencedTableName="KEYCLOAK_ROLE"
                                 referencedColumnNames="ID"/>
    </changeSet>
</databaseChangeLog>