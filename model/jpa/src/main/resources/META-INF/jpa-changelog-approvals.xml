<!-- TODO move this to a regular changelog before PR -->
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="approvals" author="vmuzikar@redhat.com">

        <createTable tableName="APPROVAL_REQUESTS">
            <column name="ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="REALM_ID" type="VARCHAR(36)"/>
            <column name="DESCRIPTION" type="VARCHAR(1024)"/>
            <column name="HANDLER_ID" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="ACTION_ID" type="VARCHAR(255)"/>
        </createTable>

        <addPrimaryKey tableName="APPROVAL_REQUESTS" columnNames="ID" constraintName="APPR_REQ_PK"/>
        <addForeignKeyConstraint baseTableName="APPROVAL_REQUESTS" baseColumnNames="REALM_ID"
                                 constraintName="APPR_REQ_REALM_FK"
                                 referencedTableName="REALM"
                                 referencedColumnNames="ID"/>

        <createTable tableName="APPROVAL_REQUEST_ATTRIBUTES">
            <column name="REQUEST_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="VALUE" type="VARCHAR(4096)"/>
        </createTable>

        <addPrimaryKey tableName="APPROVAL_REQUEST_ATTRIBUTES" columnNames="REQUEST_ID, NAME" constraintName="APPR_REQ_ATTR_PK"/>
        <addForeignKeyConstraint baseTableName="APPROVAL_REQUEST_ATTRIBUTES" baseColumnNames="REQUEST_ID"
                                 constraintName="APPR_REQ_ATTR_FK"
                                 referencedTableName="APPROVAL_REQUESTS"
                                 referencedColumnNames="ID"/>


    </changeSet>
</databaseChangeLog>